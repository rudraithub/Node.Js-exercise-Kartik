<%include  ./partials/header.ejs%>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center ">
  <div class="w-[35vw]  bg-zinc-100 px-20 py-10 rounded-[30px]">
    <h1 class="text-3xl mb-10 text-center font-semibold text-zinc-700 tracking-tight capitalize leading-none">create new account </h1>
    <form action="/register" method="post">
      <input class="block mt-2 w-full px-3 py-2 rounded-full" type="text" name="username" placeholder="Username">
      <input class="block mt-2 w-full px-3 py-2 rounded-full" type="text" name="fullname" placeholder="Full Name">
      <input class="block mt-2 w-full px-3 py-2 rounded-full" type="email" name="email" placeholder="Email">
      <input class="block mt-2 w-full px-3 py-2 rounded-full" type="number" name="contact" placeholder="Contact">
      <input class="block mt-2 w-full px-3 py-2 rounded-full" type="password" name="password" placeholder="Password">
      <input class="block mt-5  w-full px-3 py-2 bg-red-600 text-white rounded-full"type="submit" value="Create New Account">
<p class="text-xs font-semibold text-zinc-700 mt-5 w-2/2 mx-auto text-center" >By continuing,you agree to Pinterest's Terms of Service</p>
    </form>

    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
  </div>
</div>

<%include  ./partials/footer.ejs%>
